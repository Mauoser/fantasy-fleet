<h1>Vendor::Bookings#index</h1>
<p>Find me in app/views/vendor/bookings/index.html.erb</p>
<h1>Manage your vehicle bookings</h1>
<div class="container">
  <% @bookings.each do |booking| %>
    <p>Booking is at: <%= booking.start_date %> to <%= booking.end_date %></p>
    <p>Total is: Â¥<%= booking.total_price %></p>
    <p>Status: <%= booking.status %></p>
    <span>[ <%= booking.user_id %> ][ <%= booking.vehicle_id %> ]</span>
    <% if booking.waiting? %>
      <%= link_to 'Accept', accept_vendor_booking_path(booking), data: {turbo_method: :patch, turbo_confirm: 'Are you sure?' }, class: 'btn btn-success' %>
      <%= link_to 'Refuse', refuse_vendor_booking_path(booking), data: {turbo_method: :patch, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <% end %>
    <%= link_to "Show details", vendor_booking_path(booking), class: 'btn btn-primary' %>
  <% end %>
</div>