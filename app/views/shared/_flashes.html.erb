<% if notice %>
  <div class="alert alert-info alert-dismissible fade show text-center w-25 mt-3" role="alert text-center" style="opacity: 60%;">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show text-center w-25 mt-3" role="alert" style="opacity: 60%;">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <%= alert %>
  </div>
<% end %>
