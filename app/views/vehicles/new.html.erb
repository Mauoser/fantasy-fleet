<div class="m-2">
  <div class="form">
    <h2 class="text-center"><strong>Create a Vehicle</strong></h2>
    <%= simple_form_for @vehicle do |f| %>
      <div class="container">
        <div class="row">
          <div class="col">
            <%= f.input :name, input_html: { maxlength: 50} %>
          </div>
          <div class="col">
            <%= f.input :category %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= f.input :seats, input_html: { min: 1 } %>
          </div>
          <div class="col">
            <%= f.input :speed, label: "Speed (km/h)", input_html: { min: 0 } %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= f.input :price_per_day, label: "Price per day (Â¥)", input_html: { min: 0 } %>
          </div>
          <div class="col">
            <%= f.input :description, input_html: { maxlength: 500 } %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= f.input :location, input_html: { maxlength: 100 },  input_html: {data: {location_autocomplete_new_target: "location"}, class: "d-none"},
            wrapper_html: {data: {controller: "location-autocomplete-new", location_autocomplete_new_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
          </div>
          <div class="col">
            <%= f.input :availability, as: :select, collection: [['Available', 'available'], ['Unavailable', 'unavailable']] %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= f.input :photo, as: :file %>
          </div>
        </div>
        <div id="button-form">
          <%= f.button :submit, "Submit" %>
        </div>
      </div>
    <% end %>
  </div>
</div>