<% link_to "Create a vehicle", new_vehicle_path, class: 'btn btn-primary' %>
<% link_to "My Bookings", bookings_path, class: 'btn btn-primary' %>
<% link_to "My Vehicle Bookings", vendor_bookings_path, class: 'btn btn-primary' %>

<style>
  .card-img-top {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .image-container {
    width: 100%;
    padding-top: 100%;
    position: relative;
  }
  .image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .card-custom {
    width: 100%;
  }
</style>

<div class="container" id="index">
  <div class="row">
    <% @vehicles.each do |vehicle| %>
      <div class="col-md-3">
        <a href="<%= vehicle_path(vehicle) %>"> <!-- Link to vehicle details page -->
          <div class="card mb-4 card-custom">
            <div class="image-container">
              <div class="image-wrapper">
                <% if vehicle.photo.attached? %>
                  <%= cl_image_tag vehicle.photo.key, class: "card-img-top" %>
                <% else %>
                  <%= image_tag 'https://tork.buzz/__export/1718370996032/sites/tork/img/2024/06/14/image_10.png_1203501776.png', class: "card-img-top" %>
                <% end %>
              </div>
            </div>
            <div class="card-body">
              <strong><%= vehicle.name %></strong>
              <p class="card-text">
                <%= vehicle.location %><br>
                <%= vehicle.category %>, <%= vehicle.seats %> seats, <%= vehicle.speed %> km/h<br>
                <strong>Â¥<%= vehicle.price_per_day %> JPY</strong> day
              </p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="map-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body m-0 p-0">
        <div style="width: 100%; height: 700px;"
        data-controller="maps"
        data-maps-markers-value="<%= @markers.to_json %>">
        </div>
      </div>
    </div>
  </div>
</div>
<button type="button" class="border-0" data-bs-toggle="modal" data-bs-target="#map-modal">
  <i class="fa-solid fa-earth-americas fa-2xl" style="color: #196aa9;"></i>
</button>