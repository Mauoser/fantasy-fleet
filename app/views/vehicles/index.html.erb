<h1>Welcome to FANTASY FLEET's INDEX page</h1>
<%= link_to "Create a vehicle", new_vehicle_path, class: 'btn btn-primary' %>
<%= link_to "My Bookings", bookings_path, class: 'btn btn-primary' %>
<%= link_to "My Vehicle Bookings", vendor_bookings_path, class: 'btn btn-primary' %>
<div class="container">
  <% @vehicles.each do |vehicle| %>
    <div class="card-vehicle">
      <% if vehicle.photo.attached? %>
        <%= cl_image_tag vehicle.photo.key, height: 1152, width: 2048, crop: :fill %>
      <% else %>
        <%= image_tag 'https://tork.buzz/__export/1718370996032/sites/tork/img/2024/06/14/image_10.png_1203501776.png' %>
      <% end %>
      <div class="card-vehicle-infos">
        <h2><%= vehicle.name %></h2>
        <p><%= vehicle.description %></p>
        <!-- <p><%= vehicle.category %></p> -->
        <!-- <p><%= vehicle.seats %></p> -->
        <!-- <p><%= vehicle.speed %></p> -->
        <!-- <p><%= vehicle.price_per_day %></p> -->
        <!-- <p><%= vehicle.location %></p> -->
        <!-- <p><%= vehicle.availability %></p> -->
        <!-- <p><%= vehicle.user_id %></p> -->
        <%= link_to "Show details", vehicle_path(vehicle), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="map-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body m-0 p-0">
        <div style="width: 100%; height: 700px;"
        data-controller="maps"
        data-maps-markers-value="<%= @markers.to_json %>">
        </div>
      </div>
    </div>
  </div>
</div>
<button type="button" class="border-0" data-bs-toggle="modal" data-bs-target="#map-modal">
  <i class="fa-solid fa-earth-americas fa-2xl" style="color: #196aa9;"></i>
</button>